@model Song


<form asp-action="AddItem" method="POST">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-success">Creating Category</h2>
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Artist"></label>
            <input asp-for="Artist" class="form-control" />
            <span asp-validation-for="Artist" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Todo" asp-action="Index" class="btn btn-secondary" style="width:150px">
            back to List
        </a>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}
